<div class="panel-block">
	<article class="media">
		<div class="media-left">
			<figure class="image is-32x32">
				<img src="https://bulma.io/images/placeholders/64x64.png" alt="" srcset="">
			</figure>
		</div>
		<div class="media-content">
			<div class="content">
				<p>
					<strong>
						<%= link_to user_path(user) do %>
						<%=user.name%>
						<% end %>
					</strong>
					<small>
						<%= link_to user_path(user) do %>
						@
						<%=user.username%>
						<% end %>
					</small>
				</p>
			</div>
		</div>
	</article>
</div>